create database college;

//table create query
create table student(
      rollno integer primary key,
      name varchar(30),
      dob date,
      subject1 varchar(30),
      mark1 integer,
      subject2 varchar(30),
      mark2 integer,
      subject3 varchar(30),
      mark3 integer,
      subject4 varchar(30),
      mark4 integer,
      subject5 varchar(30),bgcolor=
      mark5 integer,      
      subject6 varchar(30),
      mark6 integer,
      total integer,
      avg float(5,2),

    Ruby
        Ruby
        JRuby
        IronRuby
        RSpec
    Rails
        Railsbgcolor=
        Rails Deployment
        Rails I18N
    Misc
      university varchar(30),
      passout integer);

