<tr align=center><th><b>Pascals Triangle</b><br><br></th></tr>
<tr align=center><td>
<% 
class Triangle
 include Enumerable
 def pascal(n)
	p=[1]
	while p.size < n %>
		<%= p.join("&nbsp") %>
<%              	p=Array.new(p.length+1) {|i| 
			a=i<p.length ? p[i] : 0
			b=i>0 ? p[i-1] : 0
			a+b}
	end
end
end
t=Triangle.new %>
<%=t.pascal(10) %>
</td></tr>
